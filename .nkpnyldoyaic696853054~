module.exports.handleReply = async function({ api, event, handleReply, getText }) {
    if (String(event.senderID) !== String(handleReply.author)) return;
    const { body, threadID, messageID } = event;
    var count = 0;

    if (isNaN(body) && body.indexOf("c") == 0 || body.indexOf("cancel") == 0) {
        const index = (body.slice(1, body.length)).split(/\s+/);
        for (const singleIndex of index) {
            console.log(singleIndex);
            if (isNaN(singleIndex) || singleIndex <= 0 || singleIndex > handleReply.pending.length) return api.sendMessage(`[ ğ—ğ—œğ—˜Ì‚Ì‰ğ—  ğ——ğ—¨ğ—¬ğ—˜Ì£Ì‚ğ—§ ] â†’ ${singleIndex} KhÃ´ng pháº£i lÃ  má»™t con sá»‘ há»£p lá»‡`, threadID, messageID);
        }
        return api.sendMessage(`[ ğ—ğ—œğ—˜Ì‚Ì‰ğ—  ğ——ğ—¨ğ—¬ğ—˜Ì£Ì‚ğ—§ ] â†’ Tá»« chá»‘i thÃ nh cÃ´ng`, threadID, messageID);
    }
    else {

        const index = body.split(/\s+/);
        const fs = require("fs");       
        for (const singleIndex of index) {
            if (isNaN(singleIndex) || singleIndex <= 0 || singleIndex > handleReply.pending.length) return api.sendMessage(`[ ğ—ğ—œğ—˜Ì‚Ì‰ğ—  ğ——ğ—¨ğ—¬ğ—˜Ì£Ì‚ğ—§ ] â†’ ${singleIndex} KhÃ´ng pháº£i lÃ  má»™t con sá»‘ há»£p lá»‡`, threadID, messageID);
            api.unsendMessage(handleReply.messageID);
            api.changeNickname(`[ ${global.config.PREFIX} ] â€¢ ${(!global.config.BOTNAME) ? "ğ—­ğ˜† ğ—–ğ˜‚ğ˜ğ—²" : global.config.BOTNAME}`, handleReply.pending[singleIndex - 1].threadID, api.getCurrentUserID());
            api.sendMessage("", event.threadID, () => api.sendMessage({body:`[ ğ—ğ—œğ—˜Ì‚Ì‰ğ—  ğ——ğ—¨ğ—¬ğ—˜Ì£Ì‚ğ—§ ] â†’ KÃ­ch hoáº¡t Bot thÃ nh cÃ´ng, dÃ¹ng !menu Ä‘á»ƒ xem táº¥t cáº£ lá»‡nh Bot Ä‘ang cÃ³ nhÃ© ğŸ¥°`, attachment: fs.createReadStream(__dirname + "/cache/botchao.jpg")} ,handleReply.pending[singleIndex - 1].threadID));
            count+=1;
            
        }
        return api.sendMessage(`[ ğ—ğ—œğ—˜Ì‚Ì‰ğ—  ğ——ğ—¨ğ—¬ğ—˜Ì£Ì‚ğ—§ ] â†’ PhÃª duyá»‡t thÃ nh cÃ´ng`, threadID, messageID);
    }
}

